{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./dist/",
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "Node",
    "jsx": "react",
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@models": ["./src/models"],
      "@containers": ["./src/containers"],
      "@store": ["./src/store"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}